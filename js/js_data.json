        "visual_intensity": "medium",
        "risk_tolerance": "expressive"
    },
    "tokens": {
        "colors": {
            "primary": "#22543d",
            "secondary": "#1a3f2e",
            "accent": "#2f855a",
            "bg": "#f0fff4",
            "text": "#133527",
            "hover": "#133527",
            "active": "#0d281e",
            "focus": "#22543d",
            "success": "#38a169",
            "error": "#e53e3e",
            "warning": "#d69e2e",
            "info": "#3182ce",
            "neutral": "#e2e8f0",
            "link": "#1a3f2e",
            "border": "#48bb78",
            "surface": "#f0fff4",
            "gradient_bg": "linear-gradient(to right, #f0fff4, #ecfdf5)"
        },
        "typography": {
            "primary_font": "'Fira Sans', system-ui, sans-serif",
            "base_size": "16px",
            "line_height": "1.6",
            "heading_sizes": [
                "2.7rem",
                "2.2rem",
                "1.9rem",
                "1.6rem",
                "1.4rem",
                "1.2rem"
            ]
        },
        "spacing": {
            "xs": "4px",
            "s": "8px",
            "m": "16px",
            "l": "32px",
            "xl": "48px",
            "xxl": "72px"
        },
        "borders": {
            "radius": "8px"
        },
        "shadows": {
            "low": "0 4px 8px rgba(34,84,61,0.1)",
            "medium": "0 10px 20px rgba(34,84,61,0.15)"
        },
        "motion": {
            "timing": "0.5s ease-in-out"
        },
        "breakpoints": {
            "tablet": "768px",
            "desktop": "1024px"
        },
        "animations": {
            "duration_base": 0.5,
            "ease_default": "easeInOutBack",
            "intensity_mod": 1.0,
            "risk_ease": "bounce.inOut",
            "mobile_mod": 0.75
        }
    },
    "animation_customizations": {
        "hero": {
            "from": {
                "opacity": 0,
                "y": 50
            },
            "to": {
                "opacity": 1,
                "y": 0
            }
        },
        "cta": {
            "hover": {
                "scale": 1.05
            },
            "leave": {
                "scale": 1
            }
        },
        "form": {
            "stagger": 0.1,
            "from": {
                "opacity": 0
            }
        },
        "list": {
            "stagger": 0.2,
            "from": {
                "opacity": 0,
                "x": -50
            }
        },
        "content": {
            "from": {
                "opacity": 0
            },
            "to": {
                "opacity": 1
            }
        },
        "mobile_mod": 0.8
    }
}